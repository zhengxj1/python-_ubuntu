root用户条件下激活conda
source /home/jw/miniconda3/bin/activate

解决权限问题
sudo chown -R 1000:1000 /home/jw/miniconda3


conda create -n velocyto 创建env
conda activate velocyto  激活env
conda install samtools   env内安装软件
conda install numpy scipy cython numba matplotlib scikit-learn h5py click
conda deactivate 退出环境
pip install pysam
 # `PyPI`安装
pip install velocyto

#  安装成功后需要更新系统环境变量文件
source ~/.bashrc
